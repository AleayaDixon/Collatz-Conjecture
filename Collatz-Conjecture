import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Ideone
{
	public static void main (String[] args) throws java.lang.Exception
	{
		int i = 6;
		System.out.println(i);
		while(i != 1)
		{
			if(i%2 == 0)
			{
				i = i/2;
				System.out.println(i);
			}
			else if(i%2 == 1)
			{
				i = (i*3) + 1;
				System.out.println(i);
			}
		}
		
	}
}
